{
  "name": "event-booking-server",
  "version": "1.0.0",
  "description": "Backend API for event booking system",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "NODE_OPTIONS='--loader ts-node/esm' node --watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "seed": "NODE_OPTIONS='--loader ts-node/esm' node src/scripts/seedEvents.ts",
    "verify-events": "NODE_OPTIONS='--loader ts-node/esm' node src/scripts/verifyEvents.ts",
    "test": "NODE_OPTIONS='--loader ts-node/esm' jest",
    "test:watch": "NODE_OPTIONS='--loader ts-node/esm' jest --watch",
    "test:coverage": "NODE_OPTIONS='--loader ts-node/esm' jest --coverage",
    "test:verbose": "NODE_OPTIONS='--loader ts-node/esm' jest --verbose"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.5",
    "@types/supertest": "^6.0.3",
    "jest": "^30.0.4",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
